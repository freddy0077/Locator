<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <RelativeLayout
        android:background="@drawable/header"
        android:id="@+id/lytTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        tools:ignore="UselessParent">


        <RelativeLayout
            android:id="@+id/logo"
            android:layout_marginBottom="@dimen/layout_margin_10dp"
            android:layout_marginLeft="@dimen/layout_margin_25dp"
            android:layout_width="@dimen/height_weight_70dp"
            android:layout_height="@dimen/height_weight_70dp"
            android:background="@drawable/badge_circle">

            <ImageView
                android:padding="@dimen/margin_pad_5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher"/>

        </RelativeLayout>

        <TextView
            android:layout_marginBottom="@dimen/layout_margin_20dp"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/layout_margin_25dp"
            android:layout_below="@id/logo"
            android:textStyle="bold"
            android:textSize="@dimen/textsize_18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"/>
    </RelativeLayout>

</RelativeLayout>